datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Director {
  id          String      @id @map("_id") @default(auto()) @db.ObjectId
  name        String
  email       String      @unique
  age         Int      
  createdAt   DateTime    @default(now())
  isActive    Boolean     @default(true)
  locations   Location[]  @relation("DirectorLocations")
}

model Location {
  id        String   @id @map("_id") @default(auto()) @db.ObjectId
  street    String
  city      String
  state     String
  zip       String
  country   String
  directorId    String   @db.ObjectId
  director      Director     @relation("DirectorLocations", fields: [directorId], references: [id], onDelete: Cascade)
}
